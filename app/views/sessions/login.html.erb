<h1>Login</h1>

<%= form_for @user, url: login_path, method: :post do |f| %>

<div><%= f.label :name %></div>
<div><%= f.text_field :name %></div>

<div><%= f.label :password %></div>
<div><%= f.password_field :password %></div>

<div><%= f.submit "Log In" %></div>
<% end %>

<div class="errors">
            <% if flash[:login_errors] %>
                <% flash[:login_errors].each do |error| %>
                    <p><%= error %></p>
                <% end %>
            <% end %>
</div>
</div>
</div>