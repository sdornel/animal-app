<h1>About <%= @animal.name %></h1>

     <ul>
        <li><h3>Breed: <%= @animal.breed%></h3></li>
         <li><h3>Age: <%= @animal.age %></h3></li>
         <li><h3>Bio: <%= @animal.bio %> </h3></li>        
     </ul>
     <% if @animal.adopted == true %>
          <%= "Was adopted by:" %>
          <% owner = @animal.adoptions.where(status: "Approved").pluck(:user_id).join().to_i %>
          <%= User.find(owner).name %>
     <% else %>
          <%= link_to "Fill Out Adoption Form", new_animal_adoption_path(@animal)  %>
          <%= link_to "Edit This Animal's Information", edit_animal_path(@animal) %>
     <% end %>

   <br><br>
<%= link_to "Remove this Animal", animal_path(@animal), :method => :delete%>